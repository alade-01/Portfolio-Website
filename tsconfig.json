{
  "compilerOptions": {
    "moduleResolution": "node",        // Change from "classic" to "node"
    "resolveJsonModule": true,          // Enable JSON module resolution
    //"module": "esnext",                 // Or whatever module system you're using
    "target": "es5",                   // Your preferred ECMAScript version
    "strict": true,                     // Enable strict type-checking
    "esModuleInterop": true,            // For interop between CommonJS and ES modules
    "skipLibCheck": true,               // Optional for faster compilation
    "outDir": "./dist/",                 // Output directory for compiled files
   // "rootDir": "./res/ts"                  // Root directory for TypeScript source files
  },
  "include": ["./res/ts/", "res/js/accordionSkills.ts"],           // Include all TypeScript files from the 'src' directory
  "exclude": ["node_modules"]           // Exclude node_modules
}
